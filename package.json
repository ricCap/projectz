{
  "name": "lifeloop",
  "scripts": {
    "build": "npm run build:vite && npm run build:css && npm run build:contract",
    "build:vite": "vite build",
    "build:css": "npx tailwindcss -i ./src/index.css -o ./dist/output.css",
    "build:contract": "npx hardhat compile",
    "lint": "npm run lint:sol",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "dev": "vite",
    "serve": "vite preview",
    "deploy": "npx hardhat run --network alfajores scripts/deploy.ts",
    "test": "npm run test:contract",
    "test:contract": "npx hardhat test",
    "all": "npm run build && npm run test && npm run lint"
  },
  "license": "MIT",
  "dependencies": {
    "@celo/contractkit": "2.1.0",
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "@openzeppelin/contracts": "4.7.3",
    "bignumber.js": "9.1.0",
    "dotenv": "^16.0.1",
    "node-polyglot": "^2.4.2",
    "solid-js": "1.5.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@types/node": "^16.0.8",
    "@types/node-polyglot": "^2.4.2",
    "@walletconnect/web3-provider": "^1.8.0",
    "autoprefixer": "^10.4.8",
    "hardhat": "2.10.2",
    "postcss": "^8.4.16",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "tailwindcss": "^3.1.8",
    "ts-node": "10.9.1",
    "typescript": "4.8.2",
    "vite": "3.1.0",
    "vite-plugin-solid": "2.3.0"
  }
}
